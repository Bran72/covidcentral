{{ form_start(rdvForm) }}
<div class="form-rdv">
    <div class="rdv-form-part rdv-form_left">
        <div class="rdv-form_field">
            {{ form_label(rdvForm.firstname, "Prénom *") }}
            {{ form_widget(rdvForm.firstname) }}
        </div>
        <div class="rdv-form_field">
            {{ form_label(rdvForm.city, "Ville *") }}
            {{ form_widget(rdvForm.city) }}
        </div>
    </div>
    <div class="rdv-form-part rdv-form_right">
        <div class="rdv-form_field">
            {{ form_label(rdvForm.lastname, "Nom * ") }}
            {{ form_widget(rdvForm.lastname) }}
        </div>
        <div class="rdv-form_field">
            {{ form_label(rdvForm.tel, "N° téléphone") }}
            {{ form_widget(rdvForm.tel) }}
        </div>
    </div>
    <div class="rdv-form_field rdv-form_field_date">
        {{ form_label(rdvForm.date, "Date de rendez-vous *") }}
    </div>


    <div class="rdv-form_field rdv-form_field_date">
        <div class="input-group date datetimepicker" id="datetimepicker" data-target-input="nearest">
            {{ form_widget(rdvForm.date, { 'id':  'datetimepicker' }) }}
            <div class="input-group-append" data-target="#datetimepicker" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>
</div>
<div class="rdv-form_field_submit">
    <div class="btn-submit">
        {{ form_widget(rdvForm.send) }}
    </div>
</div>
{{ form_end(rdvForm) }}